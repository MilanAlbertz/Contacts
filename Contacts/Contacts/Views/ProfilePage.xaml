<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.ProfilePage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="Test Contact" IsReadOnly="True" TextColor="Black" HorizontalOptions="Center" FontSize="30" />
            <Frame  HeightRequest="100" Padding="0" HorizontalOptions="Center" HasShadow="True" BackgroundColor="black" IsClippedToBounds="True" WidthRequest="100" CornerRadius="50">
                <Image x:Name="ProfilePictureImage" WidthRequest="100" HorizontalOptions="Center"/>
            </Frame>
            <Button Text="Change Profile Picture" TextColor="black" Clicked="EditProfilePictureButtonClicked">
                
            </Button>

            <StackLayout Padding="20,0,0,0">
                <Label TextColor="Black">Achternaam:</Label>
                <Entry Text="Test" IsReadOnly="True" TextColor="Black" />
                <Label TextColor="Black">Email:</Label>
                <Entry Text="test.test@gmail.com" IsReadOnly="True" TextColor="Black" />
                <Entry TextColor="Black" x:Name="PhoneNumbersEntry" IsReadOnly="True" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>