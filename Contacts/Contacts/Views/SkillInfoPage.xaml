<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SkillInfoPage"
             Title="Adding skill to contact"
             BackgroundColor="White">

    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0">
            <Label x:Name="IdLabel" IsVisible="False"/>
            <StackLayout Margin="20,0,20,0">
                <Label FontSize="Large" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span FontAttributes="Bold" Text="Name:"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label x:Name="SkillNameLabel" TextColor="Black" />
                <Label FontSize="Large" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span FontAttributes="Bold" Text="Description:"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label x:Name="SkillDescriptionLabel" TextColor="Black" />
                <Label FontSize="Large" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span FontAttributes="Bold" Text="Who do you want to add this skill to?"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Frame BorderColor="#5E17EB" Padding="1">
                    <Picker 
                    ItemDisplayBinding="{Binding Name}"
                    x:Name="UserPicker"
                    TextColor="Black">
                    </Picker>
                </Frame>
                <Label FontSize="Large" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span FontAttributes="Bold" Text="How well do they know this skill?"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Frame BorderColor="#5E17EB" Padding="1">
                    <Picker 
                    x:Name="GraspPicker"
                    TextColor="Black">
                    </Picker>
                </Frame>
            </StackLayout>
            <StackLayout>
                
                <Button
                    Margin="20,10,20,0"
                    VerticalOptions="Center"
                    TextColor="White"
                    BackgroundColor="#5E17EB"
                    CornerRadius="50"
                    Text="Add Skill"
                    Clicked="AddSkillButton_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>