<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.ContactsPage"
             Title="Contacts">

    <ContentPage.Content>
        <StackLayout>
            <Label TextColor="Black" HorizontalOptions="Center" FontSize="20">Wajow</Label>
            <Button
                Margin="20,10,20,0"
                VerticalOptions="Center"
                Text="Login"
                TextColor="White"
                BackgroundColor="#5E17EB"
                CornerRadius="50"
                Clicked="ContactsButton_ClickedAsync"/>
            <StackLayout>
                <ListView x:Name="QuestionListView" ItemSelected="QuestionListView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}" TextColor="Black">
                                
                            </TextCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <StackLayout>
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>